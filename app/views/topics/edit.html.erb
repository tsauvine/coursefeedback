<h2><%=t :edit_topic_heading %></h2>

<div class="topic">
  <%= form_for(@topic) do |f| %>
    <table>
      <tr>
        <td><%=t :caption %>:</td>
        <td><%= f.text_field :caption %></td>
      </tr>
      <tr>
        <td><%=t :feedback %>:</td>
        <td class="text"><%=h @topic.text %></td>
      </tr>
    </table>
    
    <p><%= f.submit t(:Save) %></p>
  <% end %>
  
  <p><%= link_to t(:back), topic_path(@topic) %></p>
</div>
