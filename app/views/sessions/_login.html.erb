<div class="sessions-login-method shibboleth-login">
  <p class="hint"><%=t :sessions_shibboleth_hint %></p>
  <p>
    <%= link_to 'Aalto weblogin', "/Shibboleth.sso/aalto?target=" + shibboleth_session_url(:protocol => 'https') %>
  </p>
</div>

<div class="sessions-login-method">
  <p class="hint"><%=t :sessions_traditional_hint %></p>

  <div class="sessions-login-box">
    <%= form_for @session, :as => :session, :url => session_path do |f| %>
      <table>
        <tr>
          <td style="text-align: right"><%= f.label :studentnumber, t(:sessions_studentnumber_label) %></td>
          <td><%= f.text_field :studentnumber, :size => 12 %></td>
        </tr>
        <tr>
          <td style="text-align: right"><%= f.label :studentnumber, t(:sessions_password_label) %></td>
          <td><%= f.password_field :password, :size => 12 %></td>
        </tr>
        <tr>
          <td style="text-align: right"><%= f.label :remember_me, t(:sessions_remember_label) %></td>
          <td><%= f.check_box :remember_me %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit t(:sessions_login_button) %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
