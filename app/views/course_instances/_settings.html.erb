<%= form_for(@local_instance) do |f| %>
  <table>
    <tr>
      <td><%=t :new_instance_name %>:</td>
      <td><%= f.text_field :name %></td>
      <td>
        <% unless @local_instance.errors[:name].empty? %>
          <span class="error"><%= @local_instance.errors[:name].join('. ') %></span>
        <% else %>
          <span class="hint"><%=t :new_instance_name_hint %></span>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%=t :new_instance_path %>:</td>
      <td><%= f.text_field :path %></td>
      <td>
        <% unless @local_instance.errors[:path].empty? %>
          <span class="error"><%= @local_instance.errors[:path].join('. ') %></span>
        <% else %>
          <span class="hint"><%=t :new_instance_path_hint %></span>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%=t :new_instance_active %>:</td>
      <td><%= f.check_box :active %></td>
      <td></td>
    </tr>
  </table>

  <p><%= f.submit t(:Save) %></p>
<% end %> 
