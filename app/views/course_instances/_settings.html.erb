<%= form_for(@local_instance) do |f| %>
  <%= f.hidden_field :course_id %>

  <table>
    <tr>
      <td><%=t :new_instance_name %>:</td>
      <td><%= f.text_field :name %></td>
      <td>
        <% if @local_instance.errors.on(:name) %>
          <span class="error"><%= @local_instance.errors.on(:name) %></span>
        <% else %>
          <span class="hint"><%=t :new_instance_name_hint %></span>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%=t :new_instance_path %>:</td>
      <td><%= f.text_field :path %></td>
      <td>
        <% if @local_instance.errors.on(:path) %>
          <span class="error"><%= @local_instance.errors.on(:path) %></span>
        <% else %>
          <span class="hint"><%=t :new_instance_path_hint %></span>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%=t :new_instance_active %>:</td>
      <td><%= f.check_box :active %></td>
      <td></td>
    </tr>
  </table>

  <p><%= f.submit t(:Save) %></p>
<% end %> 
