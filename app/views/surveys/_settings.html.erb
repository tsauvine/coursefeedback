<%= f.hidden_field :course_instance_id %><br />

<table>  
  <tr>
    <td><%= f.label :name, t(:survey_name) %>:</td>
    <td>
      <%= f.text_field :name %>
      <% if @survey.errors.on(:name) %>
        <span class="error"><%= @survey.errors.on(:name) %></span>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :opens_at, t(:survey_opens) %>:</td>
    <td><%= f.datetime_select :opens_at %></td>
  </tr>
  <tr>
    <td><%= f.label :closes_at, t(:survey_closes) %>:</td>
    <td><%= f.datetime_select :closes_at %></td>
  </tr>
  <tr>
    <td><%=t :survey_answer_permission %>:</td>
    <td><%= f.select :answer_permission, [[t(:visibility_public),'public'],[t(:visibility_ip),'ip'],[t(:visibility_authenticated),'authenticated'],[t(:visibility_enrolled),'enrolled']] %></td>
  </tr>
  <tr>
    <td><%=t :survey_read_numeric_permission %>:</td>
    <td><%= f.select :read_numeric_permission, [[t(:visibility_public),'public'],[t(:visibility_ip),'ip'],[t(:visibility_authenticated),'authenticated'],[t(:visibility_enrolled),'enrolled'],[t(:visibility_staff), 'staff']] %></td>
  </tr>
  <tr>
    <td><%=t :survey_read_text_permission %>:</td>
    <td><%= f.select :read_text_permission, [[t(:visibility_public),'public'],[t(:visibility_ip),'ip'],[t(:visibility_authenticated),'authenticated'],[t(:visibility_enrolled),'enrolled'],[t(:visibility_staff), 'staff']] %></td>
  </tr>
</table>

<p><%= f.submit t(:Save) %></p> 
