<!-- Likert -->
<p id="radio<%= question.id %>">
  <% if question.payload %>
  
    <%
    scale = question.payload[0]
    questions = question.payload[1]
    buttons = 0...scale.length
    %>
  
    <table>
      <thead>
        <tr>
          <th></th>
          <% scale.each do |alternative| %>
            <th><%=h alternative %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% questions.each_with_index do |q, index| %>
          <tr>
            <td><%=h q %></td>
            <% buttons.each do |button| %>
              <td><%= radio_button_tag "#{question.id}[#{index}]", button %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <% end %>
</p>
