<!-- users/edit.html.erb -->

<h1>
  <% if @user == current_user %>
    <%=t :my_preferences_heading %>
  <% else %>
    <%=t :edit_user_heading %>
  <% end %>
</h1>

<%= form_for @user do |f| %>
  <table>
    <tr>
      <td><%=t :user_login %>:</td>
      <td><%= @user.login %></td>
    </tr>
    <% if can? :manage, Course %>
      <tr>
        <td><%=t :user_name %>:</td>
        <td><%= f.text_field :name %></td>
      </tr>
    <% else %>
      <tr>
        <td><%=t :user_name %>:</td>
        <td><%= @user.name %></td>
      </tr>
    <% end %>
    <tr>
      <td><%=t :user_email %>:</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%=t :user_password %>:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%=t :user_confirm_password %>:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>

  <%= f.submit t(:Save) %>
<% end %>

<p><%= link_to t(:back), root_path %></p>
