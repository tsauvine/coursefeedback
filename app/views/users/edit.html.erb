<!-- users/edit.html.erb -->

<h1>
  <% if @user == current_user %>
    <%=t :my_preferences_heading %>
  <% else %>
    <%=t :edit_user_heading %>
  <% end %>
</h1>

<% form_for @user do |f| %>
  <table>
    <tr>
      <td><%=t :user_login %>:</td>
      <td><%= @user.login %></td>
    </tr>
    <% if @is_teacher %>
      <tr>
        <td><%=t :user_firstname %>:</td>
        <td><%= f.text_field :firstname %></td>
      </tr>
      <tr>
        <td><%=t :user_lastname %>:</td>
        <td><%= f.text_field :lastname %></td>
      </tr>
    <% else %>
      <tr>
        <td><%=t :user_firstname %>:</td>
        <td><%= @user.firstname %></td>
      </tr>
      <tr>
        <td><%=t :user_lastname %>:</td>
        <td><%= @user.lastname %></td>
      </tr>
    <% end %>
    <tr>
      <td><%=t :user_email %>:</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <!--
    <tr>
      <td><%=t :user_password %>:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%=t :user_confirm_password %>:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    -->
  </table>
  
  <% if @is_teacher %>
    <p><%= f.check_box :notify_by_email %> <%=t :user_notify %></p>
  <% end %>
  
  <%= f.submit t(:Save) %>
<% end %>

<p><%= link_to t(:back), root_path %></p>
