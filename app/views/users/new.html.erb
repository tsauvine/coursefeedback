<h1><%=t :new_user_heading %></h1>

<%= form_for @user do |f| %>
  <table>
    <tr>
      <td><%=t :user_login %>:</td>
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <td><%=t :user_name %>:</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%=t :user_email %>:</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%=t :user_password %>:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%=t :user_confirm_password %>:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>

  <%= f.submit t(:Save) %>
<% end %>
