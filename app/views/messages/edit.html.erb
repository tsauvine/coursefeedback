<h1><%= @topic.caption %></h1>

<div class="message">
  <%= form_for @message do |f| %>
    <%= f.hidden_field :topic_id %>

    <p class="sender">
      <%=h @message.nick %>
      &mdash; <%=l @message.created_at, :format => :long %>
    </p>

    <%= f.text_area :text, { :rows => 5, :cols => 80 } %><br />

    <p>
    <%= f.label :edit_reason, t(:message_edit_reason) %><br />
    <%= f.text_field :edit_reason, :size => 60 %><br />
    </p>


    <p><%= f.submit t(:Save) %></p>

  <% end %>
</div>

<%= link_to t(:back), @topic %>